<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nicole.ssm.dao.ArtstudioDao">

    <resultMap id="BaseResultMap" type="com.nicole.ssm.entity.Artstudio">
        <!--@Table artstudio-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="createdAt" column="created_at" jdbcType="INTEGER"/>
        <result property="updatedAt" column="updated_at" jdbcType="INTEGER"/>
        <result property="editorId" column="editor_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="imageUrl" column="image_url" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
    </resultMap>


    <!--查询所有展示数据-->
    <select id="queryAllShow" resultMap="BaseResultMap">
        select
          id, created_at, updated_at, editor_id, name, status, image_url, content
        from art_room.artstudio
        where status = 1
    </select>
<!--    &lt;!&ndash;查询指定数量上架数据&ndash;&gt;
    <select id="queryLimitArtstudios" resultMap="BaseResultMap">
        select
          id, created_at, updated_at, editor_id, name, status, image_url, content
        from art_room.artstudio
        where status = 1
    </select>-->

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, created_at, updated_at, editor_id, name, status, image_url, content
        from art_room.artstudio
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, created_at, updated_at, editor_id, name, status, image_url, content
        from art_room.artstudio
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, created_at, updated_at, editor_id, name, status, image_url, content
        from art_room.artstudio
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="createdAt != null">
                and created_at = #{createdAt}
            </if>
            <if test="updatedAt != null">
                and updated_at = #{updatedAt}
            </if>
            <if test="editorId != null">
                and editor_id = #{editorId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="imageUrl != null and imageUrl != ''">
                and image_url = #{imageUrl}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into art_room.artstudio(created_at, updated_at, editor_id, name, status, image_url, content)
        values (#{createdAt}, #{updatedAt}, #{editorId}, #{name}, #{status}, #{imageUrl}, #{content})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update art_room.artstudio
        <set>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="updatedAt != null">
                updated_at = #{updatedAt},
            </if>
            <if test="editorId != null">
                editor_id = #{editorId},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="imageUrl != null and imageUrl != ''">
                image_url = #{imageUrl},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from art_room.artstudio where id = #{id}
    </delete>

</mapper>